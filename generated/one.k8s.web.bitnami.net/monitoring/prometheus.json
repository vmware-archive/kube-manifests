{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "annotations": { },
      "labels": {
         "name": "prometheus"
      },
      "name": "prometheus",
      "namespace": "monitoring"
   },
   "spec": {
      "minReadySeconds": 30,
      "replicas": 1,
      "revisionHistoryLimit": 10,
      "strategy": {
         "rollingUpdate": {
            "maxSurge": 0,
            "maxUnavailable": 1
         },
         "type": "RollingUpdate"
      },
      "template": {
         "metadata": {
            "annotations": { },
            "labels": {
               "name": "prometheus"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [
                     "--alertmanager.url=https://alertmanager.k.int.bitnami.net",
                     "--config.file=/etc/prometheus-config/prometheus.yml",
                     "--storage.local.path=/prometheus",
                     "--storage.local.retention=504h",
                     "--storage.local.target-heap-size=2796202666",
                     "--web.console.libraries=/etc/prometheus/console_libraries",
                     "--web.console.templates=/etc/prometheus/consoles",
                     "--web.external-url=https://prometheus.k.bitnami.net/"
                  ],
                  "env": [ ],
                  "image": "prom/prometheus:v1.8.2",
                  "livenessProbe": {
                     "failureThreshold": 20,
                     "httpGet": {
                        "path": "/",
                        "port": "web"
                     },
                     "initialDelaySeconds": 960,
                     "periodSeconds": 60
                  },
                  "name": "prometheus",
                  "ports": [
                     {
                        "containerPort": 9090,
                        "name": "web"
                     }
                  ],
                  "readinessProbe": {
                     "failureThreshold": 20,
                     "httpGet": {
                        "path": "/",
                        "port": "web"
                     },
                     "initialDelaySeconds": 900,
                     "periodSeconds": 60
                  },
                  "resources": {
                     "limits": {
                        "cpu": "500m",
                        "memory": "4000Mi"
                     },
                     "requests": {
                        "cpu": "500m",
                        "memory": "4000Mi"
                     }
                  },
                  "stdin": false,
                  "tty": false,
                  "volumeMounts": [
                     {
                        "mountPath": "/etc/prometheus-config",
                        "name": "config",
                        "readOnly": true
                     },
                     {
                        "mountPath": "/prometheus",
                        "name": "data"
                     }
                  ]
               },
               {
                  "args": [
                     "--volume-dir=/etc/config",
                     "--webhook-url=http://localhost:9090/-/reload"
                  ],
                  "env": [ ],
                  "image": "jimmidyson/configmap-reload:v0.1",
                  "name": "configmap-reload",
                  "ports": [ ],
                  "stdin": false,
                  "tty": false,
                  "volumeMounts": [
                     {
                        "mountPath": "/etc/config",
                        "name": "config",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "imagePullSecrets": [ ],
            "securityContext": { },
            "terminationGracePeriodSeconds": 300,
            "volumes": [
               {
                  "configMap": {
                     "name": "prometheus"
                  },
                  "name": "config"
               },
               {
                  "name": "data",
                  "persistentVolumeClaim": {
                     "claimName": "prometheus-data"
                  }
               }
            ]
         }
      }
   }
}
